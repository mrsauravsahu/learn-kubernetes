subinclude("///pleasings//docker")
subinclude("//build/defs:service_version")

docker_image(
  name = "api",
  srcs = glob(["*"], ["node_modules", "dist"]),
  dockerfile = "Dockerfile",
  visibility = ["//services/api/..."]
)

service_version(
  name = "version",
  service = "api",
  srcs = glob(["git-version.yml"]) + [ "//:git"],
)
